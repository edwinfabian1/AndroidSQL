<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reserva">

    <EditText
        android:id="@+id/BoxtipoHab"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/borde_de_texto"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/BoxCantidadPer"
        android:layout_width="185dp"
        android:layout_height="49dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/borde_de_texto"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FechaFin"
        android:layout_width="92dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="31dp"
        android:text="Fecha fin"
        app:layout_constraintEnd_toStartOf="@+id/BoxFechaFin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CantidadPersonas"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="34dp"
        android:text="persnas"
        app:layout_constraintEnd_toStartOf="@+id/BoxCantidadPer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TipoHab"
        android:layout_width="105dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="17dp"
        android:text="Habitacion"
        app:layout_constraintEnd_toStartOf="@+id/BoxtipoHab"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FechaInicio"
        android:layout_width="105dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="14dp"
        android:text="Fecha inicio"
        app:layout_constraintEnd_toStartOf="@+id/BoxFechaIni"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/BoxFechaIni"
        android:layout_width="183dp"
        android:layout_height="43dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/borde_de_texto"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/BoxFechaFin"
        android:layout_width="185dp"
        android:layout_height="44dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/borde_de_texto"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="155dp"
        android:text="Siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BoxtipoHab"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_width="49dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:background="@color/purple_700"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/homeAsUpIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>